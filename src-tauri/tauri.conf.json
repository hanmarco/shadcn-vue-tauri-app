{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shadcn-vue-tauri-app",
  "version": "0.1.0",
  "identifier": "com.sss.han.vue-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "IC 제어 앱",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./resources/ftd2xx.dll"
    ]
  }
}